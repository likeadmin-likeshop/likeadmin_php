{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "global.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "components.d.ts",
        "auto-imports.d.ts",
        "typings/**/*.d.ts"
    ],
    "compilerOptions": {
        "ignoreDeprecations": "5.0",
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "strict": true
    },
    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}
